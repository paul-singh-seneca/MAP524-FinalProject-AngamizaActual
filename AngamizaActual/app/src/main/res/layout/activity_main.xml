<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/ghaliclassic"
    tools:ignore="MissingClass">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="wrap_content"
        android:id="@+id/slpashshimmer"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Hello World!"
            android:src="@drawable/angamizaiconblack"
            android:layout_marginTop="40dp"

            />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_below="@id/slpashshimmer"
        android:layout_width="wrap_content"
        android:id="@+id/slpashshimmer2"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slpashshimmer"
        android:layout_centerHorizontal="true"
        android:drawablePadding="8dp"
        android:fontFamily="@font/gotham"
        android:shadowColor="#57000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="Angamiza"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"/>
        <!-- app:drawableRightCompat="@drawable/androidicon"-->

    </com.facebook.shimmer.ShimmerFrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="7dp"
        android:layout_alignParentRight="true"
        android:text="Osepoo"
        android:fontFamily="@font/gotham"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:shadowColor="#57000000"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="4"/>

</RelativeLayout>