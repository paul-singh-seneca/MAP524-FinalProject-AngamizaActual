<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AngamizaActual" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ghaliclassic</item>
        <item name="colorPrimaryVariant">@color/ghaliclassic</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- this is to ensure to blank window appears when stating in background -->
        <item name="android:windowDisablePreview">true</item>

        <item name="materialButtonStyle">@style/myButton</item>

        <item name="fontFamily">@font/gotham</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="noAction" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ghaliclassic</item>
        <item name="colorPrimaryVariant">@color/ghaliclassic</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- this is to ensure to blank window appears when stating in background -->
        <item name="android:windowDisablePreview">true</item>

        <item name="materialButtonStyle">@style/myButton</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/gotham</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="myButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="appBarLayoutStyle">@color/ghaliclassic</item>
    </style>

